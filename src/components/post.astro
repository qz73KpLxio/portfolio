---
import type { CollectionEntry } from 'astro:content'
import { format } from 'timeago.js'
import ExternalLink from './external-link.astro'

interface Props {
  post: CollectionEntry<'project'> & {
    readingTime: number
  }
}

const { post } = Astro.props

const published = format(post.data.date)
---

<div class='post'>
  <div class="post-content">
    {
      post.data.isExternal ? (
        <article>
          <ExternalLink className='post--title' href={post.data.externalUrl}>
            {post.data.title}
          </ExternalLink>
        </article>
      ) : (
        <article>
          <a class='post--title' href={`/project/${post.slug}/`}>
            {post.data.title}
          </a>
        </article>
      )
    }
    <div class='post--details'>
      <div class="detail-item">
        <span class="detail-icon">üìÖ</span>
        <p>{published}</p>
      </div>
      <div class="detail-item">
        <span class="detail-icon">üè∑Ô∏è</span>
        <div class="tags-container">
          {post.data.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
      <div class="detail-item">
        {
          post.data.isExternal ? (
            <>
              <span class="detail-icon">üîó</span>
              <p>{post.data.externalLabel}</p>
            </>
          ) : (
            <>
              <span class="detail-icon">‚è±Ô∏è</span>
              <p>{post.readingTime} min read</p>
            </>
          )
        }
      </div>
    </div>
  </div>
  <div class="post-shine"></div>
</div>

<style>
  .post {
    display: flex;
    flex-direction: column;
    padding: 24px;
    row-gap: 16px;
    border: 1px solid transparent;
    background-origin: border-box;
    background-clip: padding-box, border-box;
    background-image: linear-gradient(var(--colors-background), var(--colors-background)), 
                      linear-gradient(145deg, rgba(106, 17, 203, 0.5), rgba(37, 117, 252, 0.5));
    border-radius: 12px;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .post:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .post:hover .post-shine {
    transform: translateX(100%);
  }

  .post-content {
    position: relative;
    z-index: 2;
  }

  .post-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transition: transform 0.8s ease;
    z-index: 1;
  }

  :global(.post--title) {
    font-size: var(--fontSizes-2xl);
    white-space: inherit;
    z-index: 1;
    position: relative;
    display: inline-block;
    margin-bottom: 16px;
    font-weight: 600;
    background: linear-gradient(90deg, #6a11cb, #2575fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: opacity 0.3s ease;
  }

  :global(.post--title:hover) {
    opacity: 0.8;
  }

  :global(.post--title::after) {
    content: ' ';
    position: absolute;
    inset: 0;
  }

  .post--details {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .detail-icon {
    font-size: 1.1em;
    opacity: 0.8;
  }

  .post--details p {
    font-style: italic;
    margin: 0;
  }

  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .tag {
    font-size: 0.85em;
    padding: 3px 8px;
    border-radius: 12px;
    background: linear-gradient(145deg, rgba(106, 17, 203, 0.1), rgba(37, 117, 252, 0.1));
    border: 1px solid rgba(106, 17, 203, 0.2);
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .tag:hover {
    transform: scale(1.05);
    background: linear-gradient(145deg, rgba(106, 17, 203, 0.2), rgba(37, 117, 252, 0.2));
  }

  @media (min-width: 768px) {
    .post--details {
      flex-direction: row;
      flex-wrap: wrap;
      column-gap: 20px;
      row-gap: 10px;
    }
  }

  @media (max-width: 768px) {
    .post {
      padding: 20px;
    }
    
    :global(.post--title) {
      font-size: var(--fontSizes-xl);
    }
    
    .detail-item {
      margin-bottom: 5px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .post:hover {
      transform: none;
    }
    
    .post-shine {
      display: none;
    }
  }
</style>
