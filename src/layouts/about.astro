---
import MainLayout from "@/layouts/main.astro";
import Prose from "@/components/prose.astro";
---

<MainLayout>
  <div class="corner-decoration top-left"></div>
  <div class="corner-decoration top-right"></div>
  <div class="corner-decoration bottom-left"></div>
  <div class="corner-decoration bottom-right"></div>

  <div class="page-navigation">
    <div class="nav-item active">About</div>
    <div class="nav-divider">|</div>
    <a href="/" class="nav-item">Home</a>
  </div>

  <Prose>
    <div class="about--container">
      <slot />
    </div>
  </Prose>
</MainLayout>

<style is:global>
  :root {
    --primary-color: #3a7bd5;
    --secondary-color: #00d2ff;
    --accent-color: #ff7e5f;
    --accent-secondary: #feb47b;
    --text-highlight: rgba(58, 123, 213, 0.15);
    --border-color: rgba(0, 210, 255, 0.3);
    --bg-light: rgba(58, 123, 213, 0.05);
    --bg-medium: rgba(58, 123, 213, 0.1);
  }

  .corner-decoration {
    position: fixed;
    width: 150px;
    height: 150px;
    pointer-events: none;
    z-index: -1;
  }

  .corner-decoration::before,
  .corner-decoration::after {
    content: "";
    position: absolute;
    background: var(--border-color);
  }

  .top-left {
    top: 0;
    left: 0;
  }

  .top-left::before {
    top: 20px;
    left: 0;
    width: 1px;
    height: 100px;
    background: linear-gradient(to bottom, var(--primary-color), transparent);
  }

  .top-left::after {
    top: 0;
    left: 20px;
    height: 1px;
    width: 100px;
    background: linear-gradient(to right, var(--primary-color), transparent);
  }

  .top-right {
    top: 0;
    right: 0;
  }

  .top-right::before {
    top: 20px;
    right: 0;
    width: 1px;
    height: 100px;
    background: linear-gradient(to bottom, var(--primary-color), transparent);
  }

  .top-right::after {
    top: 0;
    right: 20px;
    height: 1px;
    width: 100px;
    background: linear-gradient(to left, var(--primary-color), transparent);
  }

  .bottom-left {
    bottom: 0;
    left: 0;
  }

  .bottom-left::before {
    bottom: 20px;
    left: 0;
    width: 1px;
    height: 100px;
    background: linear-gradient(to top, var(--primary-color), transparent);
  }

  .bottom-left::after {
    bottom: 0;
    left: 20px;
    height: 1px;
    width: 100px;
    background: linear-gradient(to right, var(--primary-color), transparent);
  }

  .bottom-right {
    bottom: 0;
    right: 0;
  }

  .bottom-right::before {
    bottom: 20px;
    right: 0;
    width: 1px;
    height: 100px;
    background: linear-gradient(to top, var(--primary-color), transparent);
  }

  .bottom-right::after {
    bottom: 0;
    right: 20px;
    height: 1px;
    width: 100px;
    background: linear-gradient(to left, var(--primary-color), transparent);
  }

  .page-navigation {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20px 0 40px;
    padding: 10px 20px;
    border: 1px solid var(--border-color);
    border-radius: 30px;
    background: var(--bg-light);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    position: relative;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }

  .page-navigation::before,
  .page-navigation::after {
    content: "";
    position: absolute;
    height: 1px;
    width: 50px;
    background: linear-gradient(to right, transparent, var(--border-color));
    top: 50%;
  }

  .page-navigation::before {
    right: 100%;
    margin-right: 10px;
  }

  .page-navigation::after {
    left: 100%;
    margin-left: 10px;
    background: linear-gradient(to left, transparent, var(--border-color));
  }

  .nav-item {
    padding: 5px 15px;
    font-weight: 500;
    color: var(--primary-color);
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-item.active {
    color: var(--secondary-color);
    font-weight: 600;
  }

  .nav-item:not(.active):hover {
    color: var(--accent-color);
    transform: translateY(-2px);
  }

  .nav-item::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 15px;
    right: 15px;
    height: 2px;
    background: linear-gradient(
      to right,
      var(--primary-color),
      var(--secondary-color)
    );
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.3s ease;
  }

  .nav-item:not(.active):hover::after {
    transform: scaleX(1);
  }

  .nav-divider {
    color: var(--border-color);
    margin: 0 5px;
  }

  .about--container {
    display: flex;
    flex-direction: column;
    margin-top: 0;
    padding: 40px;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background: linear-gradient(135deg, var(--bg-light), transparent);
    position: relative;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .about--container::before {
    content: "";
    position: absolute;
    top: -5px;
    left: -5px;
    width: 15px;
    height: 15px;
    border-top: 1px solid var(--primary-color);
    border-left: 1px solid var(--primary-color);
  }

  .about--container::after {
    content: "";
    position: absolute;
    bottom: -5px;
    right: -5px;
    width: 15px;
    height: 15px;
    border-bottom: 1px solid var(--primary-color);
    border-right: 1px solid var(--primary-color);
  }

  .about--container h2 {
    margin-top: 30px;
    margin-bottom: 16px;
    font-size: var(--fontSizes-xl);
    color: var(--primary-color);
    position: relative;
    padding-left: 15px;
  }

  .about--container h2::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(
      to bottom,
      var(--primary-color),
      var(--secondary-color)
    );
    border-radius: 2px;
  }

  .about--container p {
    margin: 0px 0px 20px 0px;
    line-height: 1.7;
    color: var(--colors-foreground);
  }

  .about--container a {
    color: var(--primary-color);
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
  }

  .about--container a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(
      to right,
      var(--primary-color),
      var(--secondary-color)
    );
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .about--container a:hover {
    color: var(--secondary-color);
  }

  .about--container a:hover::after {
    transform: scaleX(1);
  }

  .about--container p:has(img) {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    justify-items: center;
    gap: 2rem;
    margin: 30px 0;
  }

  .about--container img {
    border: 2px solid transparent;
    background-origin: border-box;
    background-clip: padding-box, border-box;
    background-image: linear-gradient(
        var(--colors-background),
        var(--colors-background)
      ),
      linear-gradient(to right, var(--primary-color), var(--secondary-color));
    max-width: 300px;
    border-radius: 4px;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .about--container img:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
  }

  .about--container ul,
  .about--container ol {
    padding-left: 20px;
    margin-bottom: 20px;
  }

  .about--container li {
    margin-bottom: 8px;
    position: relative;
  }

  .about--container ul li::before {
    content: "â€¢";
    color: var(--primary-color);
    font-weight: bold;
    display: inline-block;
    width: 1em;
    margin-left: -1em;
  }

  .about--container blockquote {
    border-left: 4px solid var(--border-color);
    padding-left: 20px;
    margin: 20px 0;
    font-style: italic;
    color: var(--colors-foreground-subtle);
  }

  .about--container code {
    background: var(--bg-light);
    padding: 2px 5px;
    border-radius: 3px;
    font-family: monospace;
    font-size: 0.9em;
    color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .corner-decoration {
      width: 80px;
      height: 80px;
    }

    .top-left::before,
    .top-right::before,
    .bottom-left::before,
    .bottom-right::before {
      height: 50px;
    }

    .top-left::after,
    .top-right::after,
    .bottom-left::after,
    .bottom-right::after {
      width: 50px;
    }

    .page-navigation {
      margin: 20px auto 30px;
      padding: 8px 15px;
    }

    .page-navigation::before,
    .page-navigation::after {
      width: 30px;
    }

    .nav-item {
      padding: 5px 10px;
      font-size: 0.9em;
    }

    .about--container {
      padding: 24px;
      margin-top: 0;
    }

    .about--container p:has(img) {
      grid-template-columns: 1fr;
    }

    .about--container img {
      max-width: 100%;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .nav-item:hover,
    .about--container img:hover {
      transform: none;
    }

    .nav-item::after,
    .about--container a::after {
      transition: none;
    }
  }
</style>