---
import ExternalLink from '@/components/external-link.astro'
import MainLayout from '@/layouts/main.astro'
---

<MainLayout
  title='404 Not Found'
  desc="The page you're looking for does not exist."
  showTitleHeader={false}
>
  <div class="corner-decoration top-left"></div>
  <div class="corner-decoration top-right"></div>
  <div class="corner-decoration bottom-left"></div>
  <div class="corner-decoration bottom-right"></div>

  <div class="stars-container">
    <div class="star star1"></div>
    <div class="star star2"></div>
    <div class="star star3"></div>
    <div class="star star4"></div>
    <div class="star star5"></div>
    <div class="star star6"></div>
  </div>

  <div class="error-container">
    <div class="error-code-wrapper">
      <div class="error-code">404</div>
      <div class="error-code-shadow"></div>
    </div>
    <div class="error-message">Page Not Found</div>
    <div class="divider">
      <span></span>
      <span class="dot"></span>
      <span></span>
    </div>
    <p class="error-description">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="button-container">
      <a href="/" class="home-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
        <span>Return Home</span>
      </a>
    </div>
  </div>
</MainLayout>

<style>
  :root {
    --primary-color: #3a7bd5;
    --secondary-color: #00d2ff;
    --accent-color: #ff7e5f;
    --accent-secondary: #feb47b;
    --text-highlight: rgba(58, 123, 213, 0.15);
    --border-color: rgba(0, 210, 255, 0.3);
    --bg-light: rgba(58, 123, 213, 0.05);
    --bg-medium: rgba(58, 123, 213, 0.1);
  }

  /* Corner Decorations */
  .corner-decoration {
    position: fixed;
    width: 150px;
    height: 150px;
    pointer-events: none;
    z-index: -1;
  }

  .corner-decoration::before, 
  .corner-decoration::after {
    content: '';
    position: absolute;
    background: var(--border-color);
  }

  .top-left {
    top: 0;
    left: 0;
  }

  .top-left::before {
    top: 20px;
    left: 0;
    width: 1px;
    height: 100px;
    background: linear-gradient(to bottom, var(--primary-color), transparent);
  }

  .top-left::after {
    top: 0;
    left: 20px;
    height: 1px;
    width: 100px;
    background: linear-gradient(to right, var(--primary-color), transparent);
  }

  .top-right {
    top: 0;
    right: 0;
  }

  .top-right::before {
    top: 20px;
    right: 0;
    width: 1px;
    height: 100px;
    background: linear-gradient(to bottom, var(--primary-color), transparent);
  }

  .top-right::after {
    top: 0;
    right: 20px;
    height: 1px;
    width: 100px;
    background: linear-gradient(to left, var(--primary-color), transparent);
  }

  .bottom-left {
    bottom: 0;
    left: 0;
  }

  .bottom-left::before {
    bottom: 20px;
    left: 0;
    width: 1px;
    height: 100px;
    background: linear-gradient(to top, var(--primary-color), transparent);
  }

  .bottom-left::after {
    bottom: 0;
    left: 20px;
    height: 1px;
    width: 100px;
    background: linear-gradient(to right, var(--primary-color), transparent);
  }

  .bottom-right {
    bottom: 0;
    right: 0;
  }

  .bottom-right::before {
    bottom: 20px;
    right: 0;
    width: 1px;
    height: 100px;
    background: linear-gradient(to top, var(--primary-color), transparent);
  }

  .bottom-right::after {
    bottom: 0;
    right: 20px;
    height: 1px;
    width: 100px;
    background: linear-gradient(to left, var(--primary-color), transparent);
  }

  /* Stars Animation */
  .stars-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
    pointer-events: none;
  }

  .star {
    position: absolute;
    background: white;
    border-radius: 50%;
    filter: drop-shadow(0 0 10px var(--primary-color));
    animation: twinkle var(--duration, 4s) infinite var(--delay, 0s);
    opacity: 0;
  }

  .star1 {
    top: 15%;
    left: 20%;
    width: 3px;
    height: 3px;
    --duration: 5s;
    --delay: 0s;
  }

  .star2 {
    top: 25%;
    left: 80%;
    width: 2px;
    height: 2px;
    --duration: 6s;
    --delay: 1s;
  }

  .star3 {
    top: 60%;
    left: 15%;
    width: 4px;
    height: 4px;
    --duration: 4.5s;
    --delay: 2s;
  }

  .star4 {
    top: 75%;
    left: 75%;
    width: 3px;
    height: 3px;
    --duration: 5.5s;
    --delay: 0.5s;
  }

  .star5 {
    top: 35%;
    left: 50%;
    width: 2px;
    height: 2px;
    --duration: 5s;
    --delay: 1.5s;
  }

  .star6 {
    top: 85%;
    left: 30%;
    width: 3px;
    height: 3px;
    --duration: 6s;
    --delay: 2.5s;
  }

  @keyframes twinkle {
    0%, 100% { opacity: 0; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.5); }
  }

  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 50px 40px;
    margin: 60px auto;
    max-width: 600px;
    text-align: center;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    background: linear-gradient(135deg, var(--bg-light), transparent);
    position: relative;
    animation: fadeIn 0.8s ease-in-out;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
  }
  
  .error-container::before,
  .error-container::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
  }
  
  .error-container::before {
    top: -5px;
    left: -5px;
    border-top: 2px solid var(--primary-color);
    border-left: 2px solid var(--primary-color);
    border-radius: 5px 0 0 0;
  }

  .error-container::after {
    bottom: -5px;
    right: -5px;
    border-bottom: 2px solid var(--secondary-color);
    border-right: 2px solid var(--secondary-color);
    border-radius: 0 0 5px 0;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .error-code-wrapper {
    position: relative;
    margin-bottom: 20px;
  }
  
  .error-code {
    font-size: 140px;
    font-weight: 800;
    line-height: 1;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    position: relative;
    z-index: 2;
    animation: pulse 3s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  .error-code-shadow {
    position: absolute;
    content: '404';
    top: 10px;
    left: 10px;
    right: 0;
    bottom: 0;
    font-size: 140px;
    font-weight: 800;
    line-height: 1;
    color: transparent;
    -webkit-text-stroke: 1px rgba(0, 210, 255, 0.1);
    z-index: 1;
  }
  
  .error-message {
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--primary-color);
    position: relative;
    letter-spacing: 1px;
  }
  
  .divider {
    display: flex;
    align-items: center;
    width: 60%;
    margin: 0 auto 20px;
  }
  
  .divider span {
    flex: 1;
    height: 1px;
    background: linear-gradient(to var(--direction, right), transparent, var(--border-color));
  }
  
  .divider span:first-child {
    --direction: right;
  }
  
  .divider span:last-child {
    --direction: left;
  }
  
  .divider .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    margin: 0 10px;
    flex: none;
  }
  
  .error-description {
    font-size: 16px;
    line-height: 1.7;
    margin-bottom: 30px;
    color: var(--colors-foreground);
    max-width: 400px;
    opacity: 0.9;
  }
  
  .button-container {
    margin-top: 10px;
    position: relative;
  }
  
  .button-container::before {
    content: '';
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 1px;
    background: linear-gradient(to right, transparent, var(--border-color), transparent);
  }
  
  .home-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    background: linear-gradient(135deg, var(--bg-light), var(--bg-medium));
    color: var(--primary-color);
    border: 1px solid var(--border-color);
    border-radius: 30px;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  }
  
  .home-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }
  
  .home-button:hover {
    background: linear-gradient(135deg, var(--bg-medium), var(--bg-light));
    transform: translateY(-3px);
    border-color: var(--secondary-color);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    color: var(--secondary-color);
  }
  
  .home-button:hover::before {
    transform: translateX(100%);
  }
  
  .home-button svg {
    transition: transform 0.3s ease;
  }
  
  .home-button:hover svg {
    transform: scale(1.2) translateX(-3px);
  }
  
  @media (max-width: 768px) {
    .corner-decoration {
      width: 80px;
      height: 80px;
    }

    .top-left::before, .top-right::before, 
    .bottom-left::before, .bottom-right::before {
      height: 50px;
    }

    .top-left::after, .top-right::after, 
    .bottom-left::after, .bottom-right::after {
      width: 50px;
    }
    
    .error-container {
      padding: 40px 20px;
      margin: 40px 20px;
    }
    
    .error-code {
      font-size: 100px;
    }
    
    .error-code-shadow {
      font-size: 100px;
      top: 5px;
      left: 5px;
    }
    
    .error-message {
      font-size: 24px;
    }
    
    .divider {
      width: 80%;
    }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .error-container {
      animation: none;
    }
    
    .error-code {
      animation: none;
    }
    
    .star {
      animation: none;
      opacity: 0.5;
    }
    
    .home-button:hover {
      transform: none;
    }
    
    .home-button:hover svg {
      transform: none;
    }
    
    .home-button::before {
      display: none;
    }
  }
</style>
