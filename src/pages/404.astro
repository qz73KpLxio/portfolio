---
import ExternalLink from '@/components/external-link.astro'
import MainLayout from '@/layouts/main.astro'
---

<MainLayout
  title='404 Not Found'
  desc="The page you're looking for does not exist."
  showTitleHeader={false}
>
  <div class="stars-container">
    <div class="star star1"></div>
    <div class="star star2"></div>
    <div class="star star3"></div>
    <div class="star star4"></div>
    <div class="star star5"></div>
    <div class="star star6"></div>
    <div class="star star7"></div>
    <div class="star star8"></div>
    <div class="shooting-star"></div>
  </div>

  <div class="error-container">
    <div class="error-code">404</div>
    <div class="error-message">Page Not Found</div>
    <div class="divider"></div>
    <p class="error-description">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a href="/" class="home-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
      <span>Return Home</span>
    </a>
  </div>
</MainLayout>

<style>
  :root {
    --primary-color: #3a7bd5;
    --secondary-color: #00d2ff;
    --accent-color: #ff6b6b;
    --text-color: #333;
    --bg-color: #f8fafc;
    --border-color: rgba(58, 123, 213, 0.2);
  }

  /* Stars Animation */
  .stars-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
    pointer-events: none;
    background: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);
  }

  .star {
    position: absolute;
    background: white;
    border-radius: 50%;
    filter: drop-shadow(0 0 6px var(--primary-color));
    animation: twinkle var(--duration, 4s) infinite var(--delay, 0s);
    opacity: 0;
  }

  .star1 {
    top: 15%;
    left: 20%;
    width: 2px;
    height: 2px;
    --duration: 5s;
    --delay: 0s;
  }

  .star2 {
    top: 25%;
    left: 80%;
    width: 1px;
    height: 1px;
    --duration: 6s;
    --delay: 1s;
  }

  .star3 {
    top: 60%;
    left: 15%;
    width: 2px;
    height: 2px;
    --duration: 4.5s;
    --delay: 2s;
  }

  .star4 {
    top: 75%;
    left: 75%;
    width: 2px;
    height: 2px;
    --duration: 5.5s;
    --delay: 0.5s;
  }

  .star5 {
    top: 35%;
    left: 50%;
    width: 1px;
    height: 1px;
    --duration: 5s;
    --delay: 1.5s;
  }

  .star6 {
    top: 85%;
    left: 30%;
    width: 2px;
    height: 2px;
    --duration: 6s;
    --delay: 2.5s;
  }

  .star7 {
    top: 45%;
    left: 65%;
    width: 3px;
    height: 3px;
    --duration: 7s;
    --delay: 1.2s;
  }

  .star8 {
    top: 10%;
    left: 40%;
    width: 2px;
    height: 2px;
    --duration: 5.2s;
    --delay: 3s;
  }

  .shooting-star {
    position: absolute;
    top: 20%;
    left: -10%;
    width: 100px;
    height: 1px;
    background: linear-gradient(to right, transparent, white, transparent);
    transform: rotate(45deg);
    animation: shootingStar 8s infinite linear;
    opacity: 0;
  }

  @keyframes shootingStar {
    0% {
      transform: translateX(0) translateY(0) rotate(45deg);
      opacity: 0;
    }
    2% {
      opacity: 1;
    }
    8% {
      transform: translateX(120vw) translateY(120vh) rotate(45deg);
      opacity: 0;
    }
    100% {
      transform: translateX(120vw) translateY(120vh) rotate(45deg);
      opacity: 0;
    }
  }

  @keyframes twinkle {
    0%, 100% { opacity: 0; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.5); }
  }

  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 40px;
    margin: 80px auto;
    max-width: 500px;
    text-align: center;
    border-radius: 16px;
    background-color: rgba(255, 255, 255, 0.95);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    animation: fadeIn 0.8s ease-out;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .error-code {
    font-size: 140px;
    font-weight: 800;
    line-height: 1;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    margin-bottom: 10px;
    text-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    animation: colorShift 8s infinite alternate;
  }
  
  @keyframes colorShift {
    0% {
      filter: hue-rotate(0deg);
    }
    100% {
      filter: hue-rotate(30deg);
    }
  }
  
  .error-message {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 20px;
    color: var(--text-color);
    letter-spacing: 0.5px;
  }
  
  .divider {
    width: 80px;
    height: 4px;
    background: linear-gradient(to right, var(--primary-color), var(--secondary-color), var(--accent-color));
    border-radius: 4px;
    margin: 0 auto 25px;
  }
  
  .error-description {
    font-size: 18px;
    line-height: 1.6;
    margin-bottom: 35px;
    color: #666;
    max-width: 350px;
  }
  
  .home-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    border-radius: 30px;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
    text-decoration: none;
    box-shadow: 0 6px 15px rgba(58, 123, 213, 0.4);
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  
  .home-button:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
    z-index: -1;
    transition: opacity 0.3s ease;
    opacity: 0;
  }
  
  .home-button:hover:before {
    opacity: 1;
  }
  
  .home-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(58, 123, 213, 0.5);
  }
  
  .home-button svg {
    transition: transform 0.3s ease;
  }
  
  .home-button:hover svg {
    transform: translateX(-5px);
  }
  
  @media (max-width: 768px) {
    .error-container {
      padding: 40px 20px;
      margin: 40px 20px;
    }
    
    .error-code {
      font-size: 100px;
    }
    
    .error-message {
      font-size: 26px;
    }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .error-container {
      animation: none;
    }
    
    .star {
      animation: none;
      opacity: 0.3;
    }
    
    .shooting-star {
      display: none;
    }
    
    .home-button:hover {
      transform: none;
    }
    
    .home-button:hover svg {
      transform: none;
    }
    
    .error-code {
      animation: none;
    }
  }
</style>
